{
  "compilerOptions": {
    /* Diretórios */
    "rootDir": "./src",
    "outDir": "./build",

    /* Ambiente Node */
    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "lib": ["esnext"],
    "types": ["node"],

    /* Compatibilidade e Importação */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "moduleDetection": "force",

    /* Mapas e Declarações */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Verificações */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
